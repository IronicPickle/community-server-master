{
  "name": "elite-community-website",
  "version": "1.0.0",
  "description": "Elite: Dangerous Squadron Management Website",
  "main": "./build/app.js",
  "scripts": {
    "clean": "echo Clearing current build... && rm -rf ./build",
    "compile:typescript": "echo Compiling TypeScript... && tsc --build",
    "build:react": "echo Building react application... && npm run build --prefix ./client",
    "build": "npm run clean && npm run compile:typescript && npm run build:react",
    "prepare": "cd ./client && npm install && cd .. && echo Preparing build... && npm run build",
    "dev": "concurrently --names Server,Client \"nodemon\" \"npm run start --prefix ./client\"",
    "prod": "cross-env NODE_ENV=production forever start ./build/app.js && echo Started production server",
    "stop": "forever stop ./build/app.js && echo Stopped production server",
    "restart": "npm run stop && npm run prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IronicPickle/elite-community-website.git"
  },
  "author": "IronicPickle",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/IronicPickle/elite-community-website/issues"
  },
  "homepage": "https://github.com/IronicPickle/elite-community-website#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "connect-mongodb-session": "^2.3.3",
    "cookie-parser": "^1.4.5",
    "cross-env": "^6.0.3",
    "csurf": "^1.11.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "figlet": "^1.4.0",
    "forever": "^3.0.0",
    "jsonschema": "^1.2.6",
    "mongoose": "^5.9.20",
    "passport": "^0.4.1",
    "passport-discord": "^0.1.4",
    "passport-oauth2-refresh": "^2.0.0",
    "react-router-dom": "^5.2.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.5",
    "typescript": "^3.9.5",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/connect-mongodb-session": "0.0.3",
    "@types/cookie-parser": "^1.4.2",
    "@types/csurf": "^1.9.36",
    "@types/express": "^4.17.6",
    "@types/express-session": "^1.17.0",
    "@types/figlet": "^1.2.0",
    "@types/jsonschema": "^1.1.1",
    "@types/mongoose": "^5.7.28",
    "@types/node": "^12.12.47",
    "@types/passport": "^1.0.3",
    "@types/passport-discord": "^0.1.3",
    "@types/passport-oauth2-refresh": "^1.1.1",
    "@types/react-router-dom": "^5.1.5",
    "@types/request": "^2.48.5",
    "@types/request-promise": "^4.1.45",
    "@types/winston": "^2.4.4",
    "@types/zeromq": "^4.6.3",
    "concurrently": "^5.2.0",
    "nodemon": "^1.19.4",
    "ts-node": "^8.10.2"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules",
      "client"
    ],
    "watch": [
      "src/**/*"
    ],
    "ext": "ts json",
    "exec": "clear && cross-env NODE_ENV=development ts-node -T ./src/app.ts"
  }
}
